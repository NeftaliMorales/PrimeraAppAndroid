<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saludo"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/errorTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_nombre"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enviar"
        android:onClick="clickBtnEnviar"
        android:id="@+id/btnEnviar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultado"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imagen cargada estÃ¡ticamente"
        />

    <ImageView
        android:id="@+id/imagenEstatica"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/play"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imagen cargada desde el drawable"
        />

    <ImageView
        android:id="@+id/imagenDinamicaDesdeDrawable"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imagen cargada desde url"
        />

    <ImageView
        android:id="@+id/imagenDinamicaUrl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

</LinearLayout>